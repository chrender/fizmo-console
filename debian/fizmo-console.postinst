#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
  update-alternatives \
    --install /usr/games/zcode-interpreter zcode-interpreter \
     /usr/games/fizmo-console-launcher 50 \
    --slave /usr/share/man/man6/zcode-interpreter.6.gz \
     zcode-interpreter-man-gz /usr/share/man/man6/fizmo-console.6.gz
fi

#DEBHELPER#

exit 0
